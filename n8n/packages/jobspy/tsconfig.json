{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "baseUrl": ".",
    "typeRoots": ["./node_modules/@types", "./"],
    "paths": {
      "*": ["*"]
    }
  },
  "include": ["./**/*.ts"],
  "exclude": ["node_modules"]
}
